{
  "name": "krowinski/bcmath-extended",
  "description": "Extends php BCMath lib for missing functions like floor, ceil, round, abs, min, max, rand for big numbers. Also wraps existing BCMath functions. (more http://php.net/manual/en/book.bc.php)",
  "keywords": ["bcmath", "ceil", "round", "precision", "bignumber", "math", "rand", "floor", "abs", "arbitrary-precision"],
  "type": "library",
  "require": {
    "php": "^8.4",
    "ext-bcmath": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Marco Consiglio",
      "email": "mrccnsgl@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "MarcoConsiglio\\BCMathExtended\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MarcoConsiglio\\BCMathExtended\\Tests\\Unit\\": "tests/Unit/"
    }
  },
  "minimum-stability": "stable"
}
